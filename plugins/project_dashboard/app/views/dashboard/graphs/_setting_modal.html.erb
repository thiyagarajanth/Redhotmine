<h3 class="title"><%=l(:lable_select_tracker_status)%></h3>

<%= form_tag('/dashboard/graphs_settings',:method=>"get",:id=>"setting_modal") do -%>
    <%= hidden_field_tag 'block_id', '' %>
    <%= hidden_field_tag 'block_position', '' %>
    <%= hidden_field_tag 'project_id', @project.id %>
    <div class="box tabular unmanagement_overdue_tasks">
      <p><label for="tracker selection" id="tracker_select"><%= l(:lable_select_tracker) %></label> <span class="required">*</span>   <%= select_tag "tracker_id", options_from_collection_for_select(@project.trackers, "id", "name"),:multiple => true %></p>
      <p><label for="status_selection" id="status_select"><%= l(:lable_select_status) %></label> <span class="required">*</span>  <%= select_tag "status_id", options_from_collection_for_select(IssueStatus.all, "id", "name"),:multiple => true %></p>
    </div>
    <p class="buttons">
      <%= submit_tag l(:button_create), :name => nil %>
      <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
<% end -%>


